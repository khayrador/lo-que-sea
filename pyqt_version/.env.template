# ========================================
# CONFIGURACIÓN DE JARVIS PYQT5
# ========================================

# === APIs DE INTELIGENCIA ARTIFICIAL ===
OPENAI_API_KEY=your_openai_api_key_here
# ELEVENLABS_API_KEY=your_elevenlabs_api_key_here  # Ya no necesario

# === CONFIGURACIÓN DE VOZ ===
VOICE_PROVIDER=pyttsx3  # pyttsx3 (recomendado), coqui, elevenlabs
TTS_MODEL=tts_models/multilingual/multi-dataset/xtts_v2  # Modelo Coqui TTS
TTS_SPEAKER=Dionisio Schuyler  # Hablante para español (puedes cambiar)
TTS_LANGUAGE=es  # Código de idioma para Coqui
TTS_RATE=1.0  # Velocidad de síntesis (0.5 - 2.0)
TTS_VOLUME=0.8  # Volumen (0.0 a 1.0)

# === CONFIGURACIÓN DE RECONOCIMIENTO DE VOZ ===
STT_PROVIDER=google  # google, azure, whisper
STT_LANGUAGE=es-ES  # Idioma principal
STT_TIMEOUT=5  # Timeout en segundos
STT_PHRASE_TIMEOUT=1  # Timeout entre frases

# === CONFIGURACIÓN DE LA INTERFAZ ===
UI_THEME=dark  # dark, light, auto
UI_TRANSPARENCY=0.9  # Transparencia de la ventana (0.0 a 1.0)
UI_ALWAYS_ON_TOP=true  # Mantener ventana siempre visible
UI_MINIMIZE_TO_TRAY=true  # Minimizar a bandeja del sistema

# === CONFIGURACIÓN DE LOGGING ===
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/jarvis.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# === CONFIGURACIÓN AVANZADA ===
ENABLE_HOTKEYS=true  # Habilitar atajos de teclado globales
HOTKEY_ACTIVATE=ctrl+alt+j  # Atajo para activar Jarvis
HOTKEY_STOP=ctrl+alt+s  # Atajo para detener conversación

# === CONFIGURACIÓN DE DESARROLLO ===
DEBUG_MODE=false
DEVELOPMENT_MODE=false
AUTO_RELOAD=false
